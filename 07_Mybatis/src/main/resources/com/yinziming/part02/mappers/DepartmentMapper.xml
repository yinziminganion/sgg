<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yinziming.part02.mappers.DepartmentMapper">
    <select id="getById" resultType="com.yinziming.part02.mappers.Department">
        select *
        from department
        where id = #{id}
    </select>
    <resultMap id="Collection" type="com.yinziming.part02.mappers.Department">
        <id column="did" property="id"/>
        <result column="dname" property="name"/>
        <collection property="employees" ofType="com.yinziming.part02.mappers.Employee">
            <id column="eid" property="id"/>
            <result column="lastname" property="lastname"/>
            <result column="email" property="email"/>
            <result column="gender" property="gender"/>
        </collection>
    </resultMap>
    <select id="getByIdPlus" resultMap="Collection">
        select d.id       did,
               d.name     dname,
               e.id       eid,
               e.lastname lastname,
               e.email    email,
               e.gender   gender
        from department d
                 left join employee e
                           on d.id = e.department_id
        where d.id = #{id}
    </select>
    <resultMap id="CollectionStep" type="com.yinziming.part02.mappers.Department">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <collection property="employees" select="com.yinziming.part02.mappers.EmployeeMapperPlus.getByDeptId"
                    column="id"/>
    </resultMap>
    <select id="getByIdStep" resultMap="CollectionStep">
        select *
        from department
        where id = #{id}
    </select>
</mapper>